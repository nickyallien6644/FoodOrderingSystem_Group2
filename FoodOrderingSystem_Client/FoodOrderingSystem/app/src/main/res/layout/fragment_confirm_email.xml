<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ConfirmEmail">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="800dp">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginStart="130dp"
            android:src="@drawable/email1"
            android:layout_width="150dp"
            android:layout_height="150dp">
        </ImageView>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:text="Email has been sent"
            android:textAlignment="center"
            android:textSize="26dp"
            android:textStyle="bold"
            android:layout_marginStart="90dp">
        </TextView>
        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="80dp">
            <TextView
                android:id="@+id/txt_ssEmail"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:text="Email has been sent"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:text="Please enter your number to verify your account"
                android:textSize="18dp"
                android:textStyle="bold">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <EditText
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_width="60dp"
                android:layout_height="60dp">
            </EditText>
            <EditText
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="60dp"
                android:layout_height="60dp">
            </EditText>
            <EditText
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="60dp"
                android:layout_height="60dp">
            </EditText>
            <EditText
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="60dp"
                android:layout_height="60dp">
            </EditText>
            <EditText
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="60dp"
                android:layout_height="60dp">
            </EditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:text="If you didn't revelve a code! Resend"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginStart="10dp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <Button
                android:id="@+id/btn_Recharge"
                android:gravity="center"
                app:backgroundTint="@color/Cam"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginStart="88dp"
                android:background="@drawable/buttom_radius"
                android:text="Confirm"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>


</FrameLayout>