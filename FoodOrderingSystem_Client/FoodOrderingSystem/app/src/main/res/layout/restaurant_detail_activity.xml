<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RestaurantActivity"
    android:background="@color/Khang">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/btnBack"
                            android:layout_marginTop="13dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_back"
                            android:onClick="clickBack"/>
                        <TextView
                            android:id="@+id/tv_restaurant"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginLeft="70dp"
                            android:layout_marginTop="12dp"
                            android:text="aaaa"
                            android:textSize="25dp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="380dp"
                        android:layout_height="300dp"
                        android:layout_marginTop="50dp"
                        android:background="@drawable/restaurant_detail_title">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_restaurant"
                                android:layout_width="380dp"
                                android:layout_height="100dp"
                                android:scaleType="centerCrop"
                                android:src="@color/Cam" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="10dp">
                                <TextView
                                    android:id="@+id/tv_timeOpen"
                                    android:layout_width="50dp"
                                    android:layout_height="30dp"
                                    android:textSize="18dp"
                                    android:layout_marginLeft="100dp"
                                    android:textStyle="bold"
                                    android:text="aaaa"/>
                                <TextView
                                    android:layout_width="10dp"
                                    android:layout_height="30dp"
                                    android:textSize="18dp"
                                    android:layout_marginLeft="10dp"
                                    android:textStyle="bold"
                                    android:text="-"/>
                                <TextView
                                    android:id="@+id/tv_timeClose"
                                    android:layout_width="50dp"
                                    android:layout_height="30dp"
                                    android:textStyle="bold"
                                    android:textSize="18dp"
                                    android:layout_marginLeft="15dp"
                                    android:text="aaaa"/>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="10dp">

                                <TextView
                                    android:id="@+id/tv_address"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="18dp"
                                    android:text="aaaa"/>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="10dp">

                                <TextView
                                    android:id="@+id/tv_phone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="18dp"
                                    android:text="aaaaa"/>

                            </LinearLayout>
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:text="Recommended"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recommendedRes_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:text="Menu"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tv_seeall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:text="See all"
                            android:layout_marginRight="20dp"
                            android:textAlignment="viewEnd"
                            android:textStyle="bold"
                            android:textColor="@color/Cam"
                            android:onClick="clickSeeall"/>
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/restaurantRes_menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
            </ScrollView>
        </FrameLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
