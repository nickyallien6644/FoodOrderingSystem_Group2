<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/Khang"
    android:padding="15dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="@color/success"
        android:text="ORDER SUSSCESS"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_susscess"/>

    <TextView
        android:id="@+id/tv_bcoinpay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:text="- 51 BCOINS"
        android:gravity="center_horizontal"
        android:textStyle="bold"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="CUSTOMER: "
                    android:textStyle="bold"
                    android:textColor="@color/Cam"/>

                <TextView
                    android:id="@+id/tv_customName"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="AAAAAA "
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_change"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="150"
                    android:textColor="@color/Cam"
                    android:textSize="16dp"
                    android:layout_gravity="left"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text=" BCoins"
                    android:textSize="16dp"
                    android:textColor="@color/Cam"
                    android:textStyle="bold" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="PHONE: "
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/Cam"/>

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:text="AAAAAA "
                    android:textColor="@color/black"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="STORE: "
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/Cam"/>

                <TextView
                    android:id="@+id/tv_storeName"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:text="AAAAAA "
                    android:textColor="@color/black" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="ADDRESS"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textColor="@color/Cam"/>

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="AAAAAA "
                    android:textColor="@color/black"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="NOTE"
                    android:textStyle="bold"
                android:layout_marginTop="5dp"
                    android:textColor="@color/Cam"/>

                <TextView
                    android:id="@+id/tv_note"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="AAAAAAaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa "
                    android:textColor="@color/black" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="EXECUTE DATE: "
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/Cam"/>

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:text="AAAAAA "
                    android:textColor="@color/black" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="ORDER CODE: "
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/Cam"/>

                <TextView
                    android:id="@+id/tv_code"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:text="AAAAAA "
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="15dp"
        android:background="@color/Cam">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnhome"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/Cam"
            android:backgroundTint="@color/Cam"
            app:icon="@drawable/outline_home_24"
            app:iconSize="50dp"
            app:iconGravity="top"/>
    </androidx.cardview.widget.CardView>



</LinearLayout>