<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="220dp"
    android:layout_height="240dp"

    android:layout_marginLeft="0dp">

    <LinearLayout
        android:id="@+id/recommended_linear"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="46dp"
        android:background="@drawable/box"
        android:orientation="vertical"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/recommended_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:paddingTop="11dp"
            app:srcCompat="@drawable/ic_launcher_background"
            tools:layout_editor_absoluteX="120dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/recommended_name"
            android:layout_width="131dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:paddingTop="5dp"
            android:text="Rendang assdasasasdas"
            android:textAlignment="center"
            android:textColor="#333333"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="124dp" />

        <TextView
            android:id="@+id/recommended_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="0dp"
            android:text="20000 VND"
            android:textColor="#FA4A0C"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="69dp"
            tools:layout_editor_absoluteY="165dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>