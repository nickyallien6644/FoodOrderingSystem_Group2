<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.CreateNewPassword">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:text="Create new password"
            android:textSize="26dp"
            android:textStyle="bold"
            android:layout_marginStart="10dp">
        </TextView>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:text="Your new password must be different from previous used password"
            android:textSize="20dp"
            android:textStyle="normal"
            android:layout_marginStart="10dp">
        </TextView>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/eText_Recharge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:endIconMode="clear_text"
            app:helperText=" "
            app:helperTextTextColor="@color/Cam"
            app:boxStrokeColor="@color/Black"
            android:hint="New Password"
            app:hintTextColor="@color/Black"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_marginStart="2dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:drawablePadding="12dp"
                tools:layout_editor_absoluteX="200dp"
                android:textSize="18dp"
                android:inputType="textEmailAddress">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/eText_ConfigmPAss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:endIconMode="clear_text"
            app:helperText=" "
            app:helperTextTextColor="@color/Cam"
            app:boxStrokeColor="@color/Black"
            android:hint="Confirm new password "
            app:hintTextColor="@color/Black"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etxt_Bcoins"

                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_marginStart="2dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:drawablePadding="12dp"
                tools:layout_editor_absoluteX="200dp"
                android:textSize="18dp"
                android:inputType="textEmailAddress">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:layout_marginTop="50dp"
            android:id="@+id/btn_Recharge"
            android:gravity="center"
            app:backgroundTint="@color/Cam"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/buttom_radius"
            android:text="Create new password"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>

</FrameLayout>